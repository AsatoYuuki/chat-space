.message__box
  .message__box__for
    .message__box__for__name
      = message.user.name
    .message__box__for__info
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__box__text
    - if message.body.present?
      %p.message__box__text__view
        = message.body
    = image_tag message.image.url, class: 'massage__box__text__image' if message.image.present?
